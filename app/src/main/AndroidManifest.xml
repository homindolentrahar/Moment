<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homindolentrahar.moment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MomentApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moment">
        <activity
            android:name=".features.transaction.presentation.transaction_detail.TransactionDetailActivity"
            android:exported="false" />
        <activity
            android:name=".features.transaction.presentation.transaction_list.TransactionListActivity"
            android:exported="false" />
        <activity
            android:name=".features.transaction.presentation.transaction_home.TransactionHomeActivity"
            android:exported="false" />
        <activity
            android:name=".features.auth.presentation.forgot_password.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".features.auth.presentation.sign_up.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".core.presentation.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.auth.presentation.sign_in.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>