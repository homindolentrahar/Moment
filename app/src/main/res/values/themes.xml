<resources>
    <!-- Base application theme. -->
    <style name="Theme.Moment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_bg</item>
        <item name="windowSplashScreenAnimationDuration">750</item>
        <item name="postSplashScreenTheme">@style/Theme.Moment</item>
    </style>

    <style name="EditHint" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>