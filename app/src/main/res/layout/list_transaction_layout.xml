<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/icon_transaction"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_money" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_centerVertical="true"
    android:layout_toEndOf="@+id/icon_transaction"
    android:layout_marginStart="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Magelangan"
        android:textColor="@color/black" />
    <TextView
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today, 14:00"
        android:textColor="@color/old_grey"
        android:fontFamily="@font/inter_medium"
        />
</LinearLayout>

    <TextView
        android:id="@+id/harga_transaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/inter_bold"
        android:text="- Rp 11.000"
        android:textColor="@color/merah" />

</RelativeLayout>