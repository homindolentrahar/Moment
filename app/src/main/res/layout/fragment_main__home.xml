<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Home">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginBottom="0dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/textTgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="April 2022"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/textTgl"
                android:src="@drawable/ic_icon_arrow" />

            <!-- For dropdown https://stackoverflow.com/questions/16694786/how-to-customize-a-spinner-in-android-->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Balance"
            android:textSize="14dp"
            android:textColor="@color/old_grey"
            android:layout_marginTop="32dp"
            />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Rp"
                android:fontFamily="@font/inter_bold"
                />
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:text="250.000"
                android:fontFamily="@font/inter_bold"

                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>